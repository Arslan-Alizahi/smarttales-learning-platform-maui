@code {
    [Parameter]
    public string CurrentPage { get; set; } = "dashboard";

    [Parameter]
    public EventCallback<bool> OnNotificationsToggled { get; set; }

    private void NavigateToDashboard()
    {
        NavigationManager.NavigateTo("/kid-dashboard");
    }

    private void NavigateToAssignments()
    {
        NavigationManager.NavigateTo("/assignments");
    }

    private void NavigateToMarks()
    {
        NavigationManager.NavigateTo("/marks");
    }

    private async Task ToggleNotifications()
    {
        if (OnNotificationsToggled.HasDelegate)
        {
            await OnNotificationsToggled.InvokeAsync(true);
        }
    }

    private void NavigateToSettings()
    {
        NavigationManager.NavigateTo("/setting");
    }
} 